{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header-user.html.twig" %}
{% endblock %}

{% block main %}
    <main class="py-5 container">
        <h1>Nouvelle dépense</h1>

        {% if errors is defined and errors is not empty %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        <form method="post" action="index.php?route=add_expense">
            
            {# Titre #}
            <fieldset class="mb-3">
                <label for="title" class="form-label">Titre (ex: Courses, Resto...)</label>
                <input type="text" name="title" id="title" class="form-control" required>
            </fieldset>

            {# Montant #}
            <fieldset class="mb-3">
                <label for="amount" class="form-label">Montant (€)</label>
                <input type="number" step="0.01" name="amount" id="amount" class="form-control" required>
            </fieldset>

            {# Date #}
            <fieldset class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" name="date" id="date" class="form-control" required>
            </fieldset>

            {# Catégorie (Select) #}
            <fieldset class="mb-3">
                <label for="category" class="form-label">Catégorie</label>
                <select name="category" id="category" class="form-select" required>
                    <option value="">Choisir une catégorie...</option>
                    {% for category in categories %}
                        <option value="{{ category.getId() }}">{{ category.getLabel() }}</option>
                    {% endfor %}
                </select>
            </fieldset>

            <fieldset class="mb-3">
                <label class="form-label">Qui est concerné ?</label>
                
                <div class="card p-3 text-dark"> 
                    {% for user in users %}
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="participants[]" value="{{ user.getId() }}" id="user_{{ user.getId() }}">
                            <label class="form-check-label" for="user_{{ user.getId() }}">
                                {{ user.getUsername() }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
                <div class="form-text text-light">Cochez toutes les personnes impliquées (vous y compris).</div>
            </fieldset>

            <fieldset>
                <button type="submit" class="btn btn-primary">Ajouter la dépense</button>
            </fieldset>
        </form>
    </main>
{% endblock %}