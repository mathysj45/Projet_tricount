{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header-admin.html.twig" %}
{% endblock %}

{% block main %}
    <main class="container py-5">
        <h1>Détails utilisateur</h1>
        {% if user is defined and user is not null %}
        <div class="card mt-3" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Username: {{ user.username }} </h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Email: {{ user.email }}</h6>
                <p class="card-text">Rôle: {{ user.role }}</p>
                <a href="index.php?route=update&id={{ user.id }}" class="card-link">Modifier</a>
                <a href="index.php?route=delete&id={{ user.id }}" class="card-link">Supprimer</a>
            </div>
        </div>
        {% else %}
        <p>Erreur : données utilisateur non disponibles.</p>
        {% endif %}
    </main>
{% endblock %}