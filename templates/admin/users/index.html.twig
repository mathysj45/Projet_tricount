{% extends "layout.html.twig" %}

{% block header %}
    {% include "partials/_header-admin.html.twig" %}
{% endblock %}

{% block main %}
    <main class="py-5 container">
        <h1 class="mb-3">Liste des utilisateurs</h1>
        <a href="index.php?route=create" class="btn btn-primary">CrÃ©er un utilisateur</a>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Username
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
        {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="index.php?route=show&id={{ user.id }}" class="btn btn-info"><span class="bi bi-eye"></span></a>
                        <a href="index.php?route=update&id={{ user.id }}" class="btn btn-success"><span class="bi bi-pencil"></span></a>
                        <a href="index.php?route=delete&id={{ user.id }}" class="btn btn-danger"><span class="bi bi-trash"></span></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </main>
{% endblock %}